<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <RelativeLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="#f4f4f4"
        android:orientation="horizontal"
        >
        <TextView
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="25dp"
            android:text="Daily River Gauge Information"
            android:gravity="center"
            />

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:paddingTop="10dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:paddingBottom="15dp"

        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="District "
            android:textStyle="bold|italic" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp">


            <com.cyberswift.weatherapp.dropdown.DropDownViewForXML
                android:id="@+id/dropdown_rainGauge_district"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dropdown_bggg"
                android:textColorHint="#fff"
                android:hint="Select"
                android:gravity="center_vertical|left"
                android:paddingLeft="5dp"
                android:textColor="#fff"
              />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/down_arrow" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="River Gauge Station "
            android:textStyle="bold|italic" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp">


            <com.cyberswift.weatherapp.dropdown.DropDownViewForXML
                android:id="@+id/dropdown_rainGauge_station"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dropdown_bggg"
                android:textColorHint="#fff"
                android:hint="Select"
                android:gravity="center_vertical|left"
                android:paddingLeft="5dp"
                android:textColor="#fff"
               />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/down_arrow" />

        </RelativeLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:textStyle="bold|italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Of River"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/down_arrow"
                android:id="@+id/imageView" />


            <com.cyberswift.weatherapp.dropdown.DropDownViewForXML
                android:id="@+id/dropdown_rainGauge_RiverName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dropdown_bggg"
                android:textColorHint="#fff"
                android:hint="Select"
                android:gravity="center_vertical|left"
                android:paddingLeft="5dp"
                android:textColor="#fff"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/down_arrow" />

        </RelativeLayout>



        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Trend"

            android:textStyle="bold|italic" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp">


            <com.cyberswift.weatherapp.dropdown.DropDownViewForXML
                android:id="@+id/dropdown_rainGauge_Trend"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dropdown_bggg"
                android:textColorHint="#fff"
                android:hint="Select"
                android:gravity="center_vertical|left"
                android:paddingLeft="5dp"
                android:textColor="#fff"
              />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/down_arrow" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Level (mGTS) "

            android:textStyle="bold|italic" />

        <EditText
            android:gravity="center_vertical|right"
            android:id="@+id/et_river_gauge_level"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="6dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/dropdown_bggg"
            android:textCursorDrawable="@drawable/cursor_color"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textColor="#fff"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text=" DL (mGTS)"

            android:textStyle="bold|italic" />

        <EditText
            android:gravity="center_vertical|right"
            android:id="@+id/et_river_DL"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/dropdown_bggg"
            android:textCursorDrawable="@drawable/cursor_color"
            android:paddingRight="6dp"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="14dp"
            android:focusable="false"
            android:focusableInTouchMode="false"/>


        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="EDL (mGTS)"
            android:textStyle="bold|italic" />

        <EditText
            android:gravity="center_vertical|right"
            android:id="@+id/et_river_EDL"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/dropdown_bggg"
            android:textCursorDrawable="@drawable/cursor_color"
            android:paddingRight="6dp"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="14dp"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
        <TextView
            android:id="@+id/textViewRemarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Remarks "

            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/et_river_gauge_remarks"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:paddingTop="8dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/dropdown_bggg"
            android:textCursorDrawable="@drawable/cursor_color"
            android:hint="Enter your comments here."
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="18dp"
            android:inputType="textMultiLine"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"

            android:weightSum="2.1">

            <Button
                android:id="@+id/bt_daily_river_gauge_reset"
                android:layout_width="0dp"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:background="@drawable/reset_button_shape"
                android:padding="12dp"
                android:text="Reset" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <Button
                android:id="@+id/bt_daily_river_gauge_submit"

                android:layout_width="0dp"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/submit_btn_selector"
                android:padding="12dp"
                android:text="submit" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>