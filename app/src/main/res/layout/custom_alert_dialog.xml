<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:layout_gravity="center"

    >

    <RelativeLayout
        android:id="@+id/rl_blackBox"
        android:layout_width="295dp"
        android:layout_height="209dp"
        android:layout_gravity="center"
        android:background="@drawable/information_bg"

        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you want to save data?"
            android:textStyle=""
            android:textColor="#fff"
            android:textSize="18sp"
            android:gravity="top"
            android:id="@+id/textView_custom"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4.5"

            android:layout_below="@+id/textView_custom"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                />
            <Button
                android:id="@+id/button_cancel"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Cancel"

                android:textColor="#fff"
                android:textStyle="bold"
                android:onClick="cancleButtonClick"
                android:background="@drawable/set_cancel_color_change"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                />

            <Button
                android:id="@+id/button_ok"
                android:layout_width="1.5dp"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="OK"
                android:textColor="#fff"
                android:onClick="okButtonClick"
                android:textStyle="bold"
                android:background="@drawable/set_ok_button_color_change"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                />
        </LinearLayout>


    </RelativeLayout>

</FrameLayout>