<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/toast_border"
    >
    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_image"
        android:contentDescription="@null"
        android:id="@+id/toastImg"/>


    <TextView
        android:paddingLeft="@dimen/padding_left2"
        android:paddingStart="@dimen/padding_left2"
        android:paddingRight="@dimen/padding_left2"
        android:paddingEnd="@dimen/padding_left2"
        android:textColor="@color/consumer_indexing_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/edit_text_medium_size"
        android:layout_gravity="center_vertical"
        android:id="@+id/toastMsg"/>

</LinearLayout>


