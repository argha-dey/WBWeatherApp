        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:text="Remarks "
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/et_rain_gauge_remarks"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:paddingTop="8dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/dropdown_bggg"
            android:textCursorDrawable="@drawable/cursor_color"
            android:hint="Enter your comments here."
            android:singleLine="true"
            android:textColor="#fff"
            android:paddingLeft="8dp"
            android:textColorHint="#fff"
            android:textSize="18dp"
            android:inputType="textMultiLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:weightSum="2.1">

            <Button
                android:id="@+id/btn_rain_gauge_reset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:background="@drawable/reset_button_shape"
                android:padding="12dp"
                android:text="Reset"
                android:textColor="#fff" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <Button
                android:id="@+id/btn_rain_gauge_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:background="@drawable/submit_btn_selector"
                android:padding="12dp"
                android:text="submit"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
    </LinearLayout>