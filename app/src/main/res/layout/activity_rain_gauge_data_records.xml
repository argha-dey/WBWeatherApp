<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:weightSum="100">

    <RelativeLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="#f4f4f4"
        android:orientation="horizontal"
        >
        <TextView
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="25dp"
            android:text="Daily Rain Gauge Information"
            android:gravity="center"
            />

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"/>

    <ScrollView
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="100"
    android:paddingTop="10dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
       android:paddingBottom="15dp"

>
    <!--android:background="@color/color_scroll"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
       >


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="District "
            android:textStyle="bold|italic" />

        <RelativeLayout
            android:id="@+id/rl_dam_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp">
            <com.cyberswift.weatherapp.dropdown.DropDownViewForXML
                android:id="@+id/dropdown_district"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical|left"
                android:hint="Select"
                android:textColorHint="#fff"
                android:paddingLeft="5dp"
                android:textColor="#fff"
                android:background="@drawable/dropdown_bggg"
                >

            </com.cyberswift.weatherapp.dropdown.DropDownViewForXML>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/down_arrow" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Rain Gauge Station "
            android:textStyle="bold|italic" />

        <RelativeLayout
            android:id="@+id/rl_dam_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp">

            <com.cyberswift.weatherapp.dropdown.DropDownViewForXML
                android:id="@+id/dropdown_station_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dropdown_bggg"
                android:hint="Select"
                android:textColorHint="#fff"
                android:gravity="center_vertical|left"
                android:paddingLeft="5dp"
                android:textColor="#fff"
                >

            </com.cyberswift.weatherapp.dropdown.DropDownViewForXML>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/down_arrow" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="River Basin "
            android:textStyle="bold|italic"
            android:id="@+id/textView3" />


        <RelativeLayout
            android:id="@+id/rl_river"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp">


            <com.cyberswift.weatherapp.dropdown.DropDownViewForXML
                android:id="@+id/dropdown_river_basin_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/dropdown_bggg"
                android:gravity="center_vertical|left"
                android:paddingLeft="5dp"
                android:textColor="#fff"
                android:hint="Select"
                android:textColorHint="#fff"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

            </com.cyberswift.weatherapp.dropdown.DropDownViewForXML>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/down_arrow" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Type"
            android:textStyle="bold|italic" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/down_arrow" />

            <com.cyberswift.weatherapp.dropdown.DropDownViewForXML
                android:id="@+id/dropdown_rain_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/dropdown_bggg"
                android:textColorHint="#fff"
                android:hint="Select"
                android:gravity="center_vertical|left"
                android:paddingLeft="5dp"
                android:textColor="#fff"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/down_arrow" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Rainfall in last 24 hrs.(mm)"
            android:textStyle="bold|italic" />

        <EditText
            android:gravity="center_vertical|right"
            android:id="@+id/et_rainfall_amount_in_24hrs"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="6dp"
            android:layout_marginTop="2dp"
            android:textCursorDrawable="@drawable/cursor_color"
            android:background="@drawable/dropdown_bggg"
            android:hint=""
            android:inputType="numberDecimal"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Cummulative rainfall from 1st january (mm) "
            android:textStyle="bold|italic" />
        <EditText
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|right"
            android:id="@+id/et_cum_rainfall_1st_january"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="6dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/dropdown_bggg"
            android:textCursorDrawable="@drawable/cursor_color"
            android:hint=""
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="14dp" />







        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Cummulative rainfall from 1st June (mm) "
            android:textStyle="bold|italic" />

        <EditText
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|right"
            android:id="@+id/et_cum_rainfall_1st_june"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:paddingRight="6dp"
            android:textCursorDrawable="@drawable/cursor_color"
            android:background="@drawable/dropdown_bggg"
            android:hint=""
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Districtwise Annual Rainfall (mm) "
            android:textStyle="bold|italic" />

        <EditText

            android:gravity="center_vertical|right"
            android:id="@+id/et_annual_rainfall"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:paddingRight="6dp"
            android:background="@drawable/dropdown_bggg"
            android:textCursorDrawable="@drawable/cursor_color"
            android:hint=""
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="14dp" />
<!--

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:text="Jurisdiction of Divn"
            android:textStyle="bold|italic" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <cyberswift.com.weatherapp.dropdown.DropDownViewForXML
                android:id="@+id/dropdown_jurisdiction_division"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/border_dropdawn"

                android:padding="0dp"


                android:textStyle="bold" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/down_arrow" />

        </RelativeLayout>
